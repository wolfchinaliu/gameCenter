@charset "UTF-8";

.shake {}
.shake-main { width: 7.5rem; height: 5.3rem; background: url(../../images/shake/bg.jpg) no-repeat left top; background-size: contain; position: relative; top: 0; left: 0;}
.btn-xq { display: block; width: 1.45rem; height: 0.44rem; line-height: 0.44rem; text-align: center; font-size: 0.24rem; color: #FFFFFF; background-color: #f46756; transform: skew(-20deg); text-decoration: none; position: absolute; right: 0.3rem; top: 0.5rem;}

.shake-box { width: 4.2rem; height: 4.2rem; margin: 0 auto; position: absolute; top: 0.5rem; left: 1.64rem; z-index: 100;}
.shake-box img { width: 4.2rem; height: 4.2rem; position: absolute;}
.shake-box img.shake-up { position: absolute; top: 0; left: 0; clip: rect(0, 4.2rem, 2.1rem, 0);}
.shake-box img.shake-down { position: absolute; top: 0; left: 0; clip: rect(2.1rem, 4.2rem, 4.2rem, 0);}

.zhuanpan-msg { font-size: 0.28rem; text-align: center; height: 0.6rem; line-height: 0.6rem; position: relative; top: 0; left: 0;}
.zhuanpan-msg-tips { margin-right: 0.3rem; display: inline-block; position: absolute; top: 0.13rem; right: 0.3rem; background-color: #DDDDDD; border-radius: 0 0.1rem 0.1rem 0; height: 0.28rem; font-size: 0.24rem; line-height: 0.28rem; padding: 0 0.15rem 0 0.1rem;}
.zhuanpan-msg-tips img { width: 0.28rem; height: 0.28rem; position: absolute; top: 0; left: -0.25rem;}
.zhuanpan-msg-tips em { font-style: normal;}

