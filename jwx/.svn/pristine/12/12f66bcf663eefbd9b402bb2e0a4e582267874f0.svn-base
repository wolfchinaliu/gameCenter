
.main { width: 6.9rem; margin: 0 auto;}

.form { padding-top: 0.38rem;}
.flow-sel {}
.ui-select { width: 4.7rem; background-color: #ebebeb; border: none; height: 0.7rem; line-height: 0.7rem; font-size: 0.24rem; padding: 0 0.2rem; float: left;}
.btn-receive { display: inline-block; width: 1.95rem; height: 0.7rem; background-color: #fa6958; font-size: 0.32rem; line-height: 0.7rem; text-align: center; float: right; text-decoration: none; color: #fff;}

.form-list {}
.form-list > li { padding-top: 0.25rem; font-size: 0.32rem;}
.form-list > li input { vertical-align: middle;}
.radio-wrap { margin-right: 1rem;}

.form-list-home-flow { width: 60rem; height: auto; padding-bottom: 0; position: absolute; top: 0; left: 0; }
.home-flow-item { width: 1.68rem; height: 1.10rem; float:left; margin-right: 0.34rem; 
 border: solid 1px #b2b2b2; border-radius: 0.15rem 0 0.15rem 0;}

.form-list > li.flow-container {text-align: center; position: relative; top: 0; left: 0; height: 1.2rem;}
.flow-box { width: 5.8rem; height: 1.2rem; overflow: hidden; margin: 0 auto; position: relative; top: 0; left: 0;}
.fllow-box-code { width: 2.98rem; height: 2.98rem; margin: 0 auto;}
.fllow-box-code img { width: 100%; height: 100%;}
.fllow-box > p { font-size: 0.28rem; line-height: 1.6em; padding-top: 0.4rem;}

.home-flow-item i { display: block; width: 1.68rem; height: 0.68rem; font-size: 0.18rem; line-height: 0.4rem; background: url(../../images/flowcard/fllow-bg1.png) no-repeat left top; background-size: contain; text-indent: 0.1rem; font-style: normal;
 	 border-radius: 0.15rem 0 0 0;}

.form-list-home-flow p.on { border-color: #e96356;}
.form-list-home-flow p.on i {background: url(../../images/flowcard/fllow-bg2.png);}
.prev,.next { display: block; width: 0.16rem; height: 0.25rem; position: absolute; top: 0.6rem; text-indent: -10000px; overflow: hidden;}
.prev { left: 0; background-image: url(../../images/flowcard/left1.png); background-size: contain;}
.next { right: 0;background-image: url(../../images/flowcard/right1.png); background-size: contain;}
.flow-container a.prev.on {background-image: url(../../images/flowcard/left2.png);}
.flow-container a.next.on {background-image: url(../../images/flowcard/right2.png);}


.form-btn { padding-top: 0.3rem; text-align: center;}
.btn-receive2 { margin-top: 0.25rem; color: #0dbd00; font-size: 0.28rem; display: inline-block; text-decoration: none;}


.home-prompt {padding-top: 0.2rem; line-height: 1.8em;}
.home-prompt dt { font-size: 0.26rem; color: #0e0e0e;}
.home-prompt dd { font-size: 0.22rem; color: #3a3a3a;}
