@charset "UTF-8";

.follow {
	width: 5.7rem;
	margin: 1.5rem auto 0 auto;
	background-color: #fafafa;
	border-radius: 0.2rem;
	min-height: 8.2rem;
	padding-bottom: 0.8rem;
	box-shadow: 5px 5px 3px #f6f6f6;
}
.follow h1 {
	position: relative;
	left: 0;
	top: 0;
	height: 2rem;
}
.follow h1 img {
	display: block;
	width: 2rem;
	height: 2rem;
	border: solid 3px #e0e0e0;
	overflow: hidden;
	border-radius: 50%;
	position: absolute;
	top: -1rem;
	left: 1.85rem;
}
.follow h1 span {
	display: block;
	padding-top: 1.3rem;
	font-size: 0.36rem;
	line-height: 2em;
	text-align: center;
}

.follow-text {
	padding: 0 0.45rem;
	font-size: 0.3rem;
	text-indent: 2em;
	line-height: 2em;
}

.follow-text-tip {
	font-size: 0.3rem;
	padding-top: 0.5rem;
	text-align: center;
	color: red;
}
.follow-text-center {
	font-size: 0.34rem;
	line-height: 2em;
	text-align: center;
}

.follow-code {
	width: 2.89rem;
	height: 3.25rem;
	width: 2.41rem;
	height: 2.4rem;
	padding: 0.7rem 0.30rem 0.15rem 0.18rem;
	margin: 0.2rem auto 0 1.65rem;
	background: url(../../images/follow/follow-img1.png) no-repeat left top;
	background-size: contain;
}
.follow-code img {
	width: 100%;
}

.follow-tips {
	width: 100%;
	height: 0.72rem;
	line-height: 0.72rem;
	font-size: 0.26rem;
	color: #fff;
	text-align: center;
	position: relative;
	top: 0;
	left: 0;	
	margin-top: 0.5rem;
	background-color: #f46756;
}

.follow-tips-left,.follow-tips-right {
	position: absolute;
	top: 0.15rem;
	width: .5rem;
	height: 0.72rem;
	background-color: #cb5648;
}
.follow-tips-left {
	left: -0.5rem;
}
.follow-tips-right {
	right: -0.5rem;
}
.follow-tips-left:before,.follow-tips-right:before {
	content: '';
	width: 0.72rem;
	height: 0.72rem;
	position: absolute;
	background-color: #ebebeb;
	border-radius: 50%;
}
.follow-tips-left:before { right: 0.25rem; }
.follow-tips-right:before { left: 0.25rem; }












